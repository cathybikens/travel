<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/uploadVehicleRegDocsButton"
        android:text="Upload Vehicle Reg Docs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bookInspectionButton"
        android:text="Book Inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Replace with a built-in drawable to test -->
    <ImageView
        android:id="@+id/vehicleRegDocsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Vehicle registration document icon" />
</LinearLayout>
